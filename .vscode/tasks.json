{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/luapython.cpp",
                "${workspaceFolder}/boolean.cpp",
                "${workspaceFolder}/number.cpp",
                "${workspaceFolder}/string.cpp",
                "${workspaceFolder}/set.cpp",
                "${workspaceFolder}/dict.cpp",
                "${workspaceFolder}/list.cpp",
                "${workspaceFolder}/tuple.cpp",
                "${workspaceFolder}/module.cpp",
                "${workspaceFolder}/function.cpp",
                "-o",
                "${workspaceFolder}/luapython.so",
                "-llua",
                "-lpython3.13",
                "-ldl",
                "-I/usr/include/python3.13"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}